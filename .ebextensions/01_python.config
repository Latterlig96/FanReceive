container_commands:
    01_migrate:
        command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate"
        leader_only: true
    02_createsu:
        command: "source /var/app/venv/*/bin/activate && python3 manage.py createsuperuser"
        leader_only: true

option_settings:
    aws:elasitcbeanstalk:application:environment:
        DJANGO_SETTINGS_MODULE: fanreceive.settings
        ALLOWED_HOSTS: ".elasticbeanstalk.com"
    aws:elasitcbeanstalk:container:python:
        WSGIPath: fanreceive.wsgi:application
    